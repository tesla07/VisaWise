{
  "dashboard": {
    "title": "VisaWise Monitoring Dashboard",
    "tags": ["visawise", "uscis", "ai-agents"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Queries",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(visawise_queries_total[5m])",
            "legendFormat": "{{agent_type}} - {{status}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Query Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(visawise_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - {{agent_type}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(visawise_query_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile - {{agent_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Case Status Checks",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(visawise_case_checks_total[5m]))",
            "legendFormat": "Checks/sec"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "visawise_active_sessions"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(visawise_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Cache Size",
        "type": "stat",
        "targets": [
          {
            "expr": "visawise_cache_size"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 7,
        "title": "Case Check Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(visawise_case_check_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(visawise_case_check_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 12
        }
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
